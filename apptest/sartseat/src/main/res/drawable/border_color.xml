<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景色 -->
    <solid android:color="#4D3D9E" />
    <!-- 设置边框的大小和颜色 -->
    <stroke
        android:width="2px"
        android:color="#fff" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="45px"
        android:bottomRightRadius="45px"
        android:topLeftRadius="45px"
        android:topRightRadius="45px" />
</shape>